{% if config_db %}
sharding:
  configDB: {{ config_db }}
{% endif %}

#processManagement:

security:
   clusterAuthMode: x509

# network interfaces
net:
  port: 27017
  bindIp: 127.0.0.1,{{ ansible_host }}
  ssl:
    mode: requireSSL
    PEMKeyFile: {{ sc_chain_remote }}
    clusterFile: {{ sc_chain_remote }}
    CAFile: {{ sc_interm_remote }}

